doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/css/style.css')
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
  body
    nav.navbar.navbar-expand-lg.bg-body-tertiary
      .container-fluid 
        a.navbar-brand(href='/') Trivia Game
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNavAltMarkup', aria-controls='navbarNavAltMarkup', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarNavAltMarkup
          .navbar-nav
            a(class='active', href='/') Home
            a(class='active', href='/leaderboard') Leaderboard
            if user
              if isAdmin && isAdmin == "true"
                a(class='', href='/a/users') Users
              a(class='active', href='/g/play') Play
              a(class='', href='/u/profile') Profile
              a(class='', href='/u/logout') Logout #{user.username}
            else
              a(class='', href='/u/login') Login
    block content